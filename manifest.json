{
  "name": "ChatGPT query parameter",
  "manifest_version": 2,
  "description": "provide prompt input via query paramter to chat.openai.com",
  "version": "0.1",
  "content_scripts": [{
    "matches": ["https://chat.openai.com/*"],
    "js": ["content-script.js"],
    "run_at": "document_end"
  }],
  "browser_specific_settings": {
    "gecko": {
      "id": "chatgptq@h43z"
    }
  },
  "permissions": [
    "activeTab",
    "https://chat.openai.com/*"
  ]
}
